<div class="col-md-6 col-lg-4 col-xl-3 grid-item page-{{page}} {{photo.user.name}} {{photo.id}} {{likeClass}}">
  <div class='com-number sr-only'>
    {{photo.num_comments}}
  </div>
  <div class='date sr-only'>
    {{photo.updated_at}}
  </div>
  <div class="card mx-auto my-2"  data-id="{{photo.id}}">
    <img data-src="{{photo.site}}" class="card-img-top clickable lazyload" style="height:auto; width:100%;" data-id="{{photo.id}}">
    <div class="card-body pt-2">

      {{#if isSignedIn}}
      <div class="icons-{{photo.id}}">
        <span id="like-icon-{{photo.id}}">
          {{> like-icon isLikedByUser=isLikedByUser likeId=likeId photoId=photo.id}}
        </span>
        <i class="far fa-comment clickable" data-id="{{photo.id}}"></i>
      </div>
      {{/if}}

      <p class="card-text">
        {{limit photo.description 50}}
      </p>
      <p class="card-text"><small class="text-muted">{{photo.user.name}} {{timeDiff photo.created_at photo.updated_at}}</small></p>

      <span class="like-word-{{photo.id}}">
        {{>like-word isPlural=isLikePlural numLikes=photo.num_likes photoId=photo.id}}
      </span>

      {{#if photo.num_comments}}
        <span>{{photo.num_comments}}</span>
        {{#if isComPlural}}
        <span> comments</span>
        {{else}}
        <span> comment</span>
        {{/if}}
      {{/if}}
    </div>
  </div>
</div>
